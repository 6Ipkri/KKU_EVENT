<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/addImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/select_background_filter"
                android:padding="8dp"
                app:srcCompat="@drawable/addimage" />

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:fontFamily="@font/rsu_regular"
                android:hint="ชื่องาน"
                android:textColor="@color/dark_gray"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <EditText
                    android:id="@+id/dateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rsu_regular"
                    android:hint="วันที่ / เวลา"
                    android:inputType="none"
                    android:textColor="@color/dark_gray"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    tools:ignore="Autofill" />

                <ImageView
                    android:id="@+id/img_datetime"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="15dp"
                    android:clickable="true"
                    android:contentDescription="@string/description"
                    android:foreground="@drawable/btn_ripple_background_red"
                    android:src="@drawable/ic_event_available_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:orientation="horizontal"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <EditText
                    android:id="@+id/create_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rsu_regular"
                    android:hint="สถานที่"
                    android:inputType="text"
                    android:textColor="@color/dark_gray"
                    android:textCursorDrawable="@null"
                    tools:ignore="Autofill" />

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@string/description"
                    android:foreground="@drawable/btn_ripple_background_red"
                    android:src="@drawable/location" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rsu_regular"
                android:text="หน่วยกิจกรรม"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <Spinner
                    android:id="@+id/activity_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rsu_regular"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rsu_regular"
                android:text="การเปิดรับ"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <Spinner
                    android:id="@+id/register_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rsu_regular"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@null"
                    tools:ignore="Autofill" />

            </LinearLayout>

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:fontFamily="@font/rsu_regular"
                android:hint="เบอร์โทรศัพท์"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/dark_gray"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <EditText
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:fontFamily="@font/rsu_regular"
                android:hint="เว็บไซต์"
                android:textColor="@color/dark_gray"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coordinatorLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/search_box_background"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <EditText
                    android:id="@+id/event_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/rsu_regular"
                    android:gravity="top"
                    android:hint="รายละเอียดกิจกรรม"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textColor="@color/dark_gray"
                    android:textCursorDrawable="@null"
                    tools:ignore="Autofill" />

                <ImageView
                    android:id="@+id/img_event_detail"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom|end"
                    android:clickable="true"
                    android:contentDescription="@string/description"
                    android:foreground="@drawable/btn_ripple_background_red"
                    android:src="@drawable/camera"
                    android:focusable="true" />

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_save_myevent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="บันทึก"
                    android:fontFamily="@font/rsu_regular"
                    android:textColor="@color/button_login"
                    android:textSize="20sp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/rounded_checked_box"/>

                <Button
                    android:id="@+id/btn_cancel_myevent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ยกเลิก"
                    android:fontFamily="@font/rsu_regular"
                    android:textColor="@color/button_login"
                    android:textSize="20sp"
                    android:background="@drawable/rounded_checked_box"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>